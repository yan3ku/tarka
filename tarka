#!/bin/sh
# backup
# this script first unpacks any older incremental backups and then rsynces first
#

parse() {
    set -- "$(basename "$1")"
    psrc="$(echo "~${1%~*}~" | tr '~' '/')"
    pmeta="${1##*~}"

    pdate="${pmeta%=*}"
    phash="${pmeta##*=}"
    phash="${phash%!*}"
    pnr="${pmeta#*!}"
    pnr="${pnr%--*}"
    pnr="${pnr%.*}"
    ptag="${pmeta#*!}"
    ptag="${ptag#*--}"
    ptag="${ptag%.*}"
    test "$ptag" = "$pnr" && ptag=""

    # echo "psrc $psrc"
    # echo "date $pdate"
    # echo "hash $phash"
    # echo "pnr $pnr"
    # echo "pnr $ptag"
}

mangle() {
    mangle="${1%/}"
    mangle="$(echo "${mangle#/}" | tr '/' '~')"
    printf "%s" "$mangle"
}

latest() {
    latest=""
    for i in "$repo"/"$(mangle $1)"*; do
        if test "${i##*.}" != snar; then
            latest="$i"
        fi
    done
    printf "%s" "$latest"
}

group() { # path hash
    printf "%s" "${repo}/$(mangle "$1")~$2"
}

untar() {
    for i in "$repo"/"$(mangle 1)"*"$2"*.tar; do
        echo "untaring $i..."
        tar xf "$i" -C "$repo/" -G
    done
}

realsrc() {
    mangle "$(realpath "$1")"
}

genhash() {
    date +%s | md5sum | head -c 8
}

list() {
    mangle_path "$1"
    printf "%-40s %-30s %-8s %-4s %s\n" "src" "date" "hash" "nr" "tag"
    for i in "$repo/${p}"*.tar; do
        test -e "$i" || break
        parse "$i"
        printf "%-40s %-30s %8s %-4s %s\n" "$psrc" "$pdate" "$phash" "$pnr" "$ptag"
    done
}

sync() {
    # exit 0
    rsync -avz --delete \
          "${1}/" \
          "${2}"
    # --exclude-from="$0-ignore" \
}

roll() {
    tar cvf "${2}.tar" "${1}" -g "${1}.snar" --xform="s|^${repo}/||"
}

usage() {
    echo "$0 cmd repo cmd_args"
    exit 1
}

is_repo() {
    test -e "$repo/.repo" || usage
}

restore() {
    untar "$1" "$2"
}

main() {
    test -n "$1" || usage
    test -n "$2" || usage

    isfull=0
    isinc=0
    isres=0

    cmd="$1"
    repo=${2%/}
    is_repo
    shift && shift
    case "$cmd" in
        f*)  isfull=1 ;;
        i*)  isinc=1  ;;
        r*)  isres=1  ;;
        l*)  list "$@"; exit;;
        *) echo "invalid operation: $cmd;" >&2
           exit 1;;
    esac

    src="$(realpath $1)"
    tag=${2:-}
    date=$(date +'%Y-%m-%d__%H-%M.%S')
    latest=$(latest "$src")

    if test "$isfull" -eq 1 || test ! -e "$latest"; then
        isfull=1
        hash="$(genhash)"
        nr="0"
    else
        parse "$latest"
        hash="$phash"
        nr="$((pnr+1))"
    fi

    group=$(group "$src" "$hash")
    dst="${repo}/$(mangle $src)~${date}=${hash}!${nr}${tag:+--}${tag}"

    printf "%-15s : %s\n" "tag" "$tag"
    printf "%-15s : %s\n" "group" "$group"
    printf "%-15s : %s\n" "latest" "$latest"
    printf "%-15s : %s\n" "destination" "$dst"
    echo "----------"

    test -z "$isfull" && untar "$(mangle src)" "$hash"
    sync "$src" "$group"
    roll "$group" "$dst"
    rm -rf "$group"
}

main "$@"
